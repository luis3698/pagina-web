rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permitir a todos los usuarios leer todas las recetas
    match /nombreRs/{document=**} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // Otras reglas para otras colecciones o documentos si es necesario
    // ...
  }
}