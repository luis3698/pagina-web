rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección 'nombreRs'
    match /nombreRs/{document=**} {
      allow read, write: if request.auth != null && (
        request.auth.uid == resource.data.user ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }

    // Reglas para la colección 'users'
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Reglas para almacenar imágenes en la carpeta 'images'
    match /nombreRs/{document}/images/{imageId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.user;
    }
  }
}
